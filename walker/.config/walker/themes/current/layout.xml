<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"></requires>

  <object class="GtkWindow" id="Window">
    <style>
      <class name="window"></class>
    </style>
    <property name="resizable">true</property>
    <property name="title">App Launcher</property>

    <child>
      <object class="GtkBox" id="BoxWrapper">
        <property name="overflow">hidden</property>
        <property name="orientation">horizontal</property>
        <property name="valign">center</property>
        <property name="halign">center</property>
        <property name="height-request">570</property>

        <!-- Two-column main layout -->
        <child>
          <object class="GtkBox" id="MainColumns">
            <property name="orientation">horizontal</property>
            <property name="spacing">25</property>

            <!-- Left column: avatar + search + mode buttons -->
            <child>
              <object class="GtkOverlay" id="LeftColumnOverlay">
                <style>
                  <class name="left-column-overlay"></class>
                </style>
                <property name="hexpand">true</property>
                <property name="vexpand">true</property>
                <property name="width-request">300</property>

                <!-- Background with custom image -->
                <child>
                  <object class="GtkBox" id="LeftBackground">
                    <style>
                      <class name="left-background"></class>
                    </style>
                  </object>
                </child>

                <!-- Foreground content -->
                <child type="overlay">
                  <object class="GtkBox" id="LeftColumn">
                    <style>
                      <class name="left-column"></class>
                    </style>
                    <property name="orientation">vertical</property>
                    <property name="width-request">250</property>
                    <!-- Search bar -->
                    <child>
                      <object class="GtkBox" id="SearchContainer">
                        <style>
                          <class name="search-container"></class>
                        </style>
                        <property name="orientation">horizontal</property>
                        <property name="halign">fill</property>
                        <property name="spacing">10</property>

                        <child>
                          <object class="GtkImage" id="SearchIcon">
                            <style>
                              <class name="search-icon"></class>
                            </style>
                            <property name="icon-name">system-search-symbolic</property>
                          </object>
                        </child>

                        <child>
                          <object class="GtkEntry" id="Input">
                            <style>
                              <class name="input"></class>
                            </style>
                            <property name="hexpand">true</property>
                          </object>
                        </child>
                      </object>
                    </child>

                    <!-- Spacer area to reveal image background -->
                    <child>
                      <object class="GtkBox" id="ImageSpacer">
                        <style>
                          <class name="image-spacer"></class>
                        </style>
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                      </object>
                    </child>

                    <!-- Mode buttons (APPS / RUN / FILES / WINDOW) -->
                    <child>
                      <object class="GtkBox" id="ModeButtons">
                        <style>
                          <class name="mode-buttons"></class>
                        </style>
                        <property name="orientation">horizontal</property>
                        <property name="spacing">10</property>
                        <property name="halign">center</property>

                        <child>
                          <object class="GtkButton" id="ModeApps">
                            <style>
                              <class name="mode-button"></class>
                              <class name="mode-apps"></class>
                            </style>
                            <property name="label">APPS</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="ModeRun">
                            <style>
                              <class name="mode-button"></class>
                            </style>
                            <property name="label">RUN</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="ModeFiles">
                            <style>
                              <class name="mode-button"></class>
                            </style>
                            <property name="label">FILES</property>
                          </object>
                        </child>
                        <child>
                          <object class="GtkButton" id="ModeWindow">
                            <style>
                              <class name="mode-button"></class>
                            </style>
                            <property name="label">WINDOW</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox" id="ContentContainer">
                <property name="orientation">vertical</property>
                <property name="spacing">10</property>
                <style>
                  <class name="content-container"></class>
                </style>
                <!-- Right column: results list + keybinds + messages -->
                <child>
                  <object class="GtkBox" id="RishtColumn">
                    <style>
                      <class name="right-column"></class>
                    </style>
                    <property name="orientation">horizontal</property>
                    <property name="spacing">10</property>
                    <!-- Scrollable app list -->
                    <child>
                      <object class="GtkLabel" id="ElephantHint">
                        <style>
                          <class name="elephant-hint"></class>
                        </style>
                        <property name="label">Waiting for elephant...</property>
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="visible">false</property>
                        <property name="valign">0.5</property>
                      </object>
                    </child>
                    <!-- Status messages -->
                    <child>
                      <object class="GtkLabel" id="Placeholder">
                        <style>
                          <class name="placeholder"></class>
                        </style>
                        <property name="label">No Results</property>
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="valign">0.5</property>
                        <property name="width-request">600</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkScrolledWindow" id="Scroll">
                        <style>
                          <class name="scroll"></class>
                        </style>
                        <property name="can_focus">false</property>
                        <property name="overlay-scrolling">true</property>
                        <property name="hexpand">true</property>
                        <property name="vexpand">true</property>
                        <property name="hscrollbar-policy">never</property>
                        <property name="vscrollbar-policy">automatic</property>
                        <property name="width-request">600</property>
                        <child>
                          <object class="GtkGridView" id="List">
                            <style>
                              <class name="list"></class>
                            </style>
                            <property name="max_columns">1</property>
                            <property name="min_columns">1</property>
                            <property name="can_focus">false</property>
                          </object>
                        </child>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="Preview">
                        <style>
                          <class name="preview"></class>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="Keybinds">
                    <style>
                      <class name="keybinds"></class>
                    </style>
                    <property name="hexpand">true</property>
                    <property name="margin-top">10</property>
                    <child>
                      <object class="GtkBox" id="GlobalKeybinds">
                        <style>
                          <class name="global-keybinds"></class>
                        </style>
                        <property name="spacing">10</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkBox" id="ItemKeybinds">
                        <style>
                          <class name="item-keybinds"></class>
                        </style>
                        <property name="hexpand">true</property>
                        <property name="halign">end</property>
                        <property name="spacing">10</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="Error">
                    <style>
                      <class name="error"></class>
                    </style>
                    <property name="xalign">0</property>
                    <property name="visible">false</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
