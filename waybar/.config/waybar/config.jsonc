      "inhibited-none": "ó°ª‘",
      "dnd-inhibited-notification": "ó°‚›",
      "dnd-inhibited-none": "ó°ª‘"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
  "custom/kernel": {
    "format": "ïŒš  {}  |",
