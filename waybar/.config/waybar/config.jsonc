{
  "layer": "top", // Waybar at top layer
  "position": "top", // Waybar position (top|bottom|left|right)
  "height": 30, // Waybar height (to be removed for auto height)
  "spacing": 12, // Gaps between modules (4px)

  // Choose the order of the modules
  "modules-left": [
    "clock",
    "tray",
    "idle_inhibitor",
    "hyprland/window",
  ],
  "modules-center": [
    "hyprland/workspaces",
  ],
  "modules-right": [
    "custom/kernel",
    "custom/hyprland",
    "pulseaudio",
    "network",
    "group/hardware",
    "custom/notification",
  ],

  // Modules configuration

  "group/hardware": {
    "orientation": "horizontal",
    "drawer": {
    "transition-duration": 500,
      "children-class": "not-power",
      "transition-left-to-right": false,
    },
    "modules": [
      "battery",
      "cpu",
      "temperature",
      "memory",
      "disk",
    ]
  },
  "custom/notification": {
    "tooltip": true,
    "format": "<span size='12pt'>{icon}</span>",
    "format-icons": {
      "notification": "ó±…«",
      "none": "ó°‚œ",
      "dnd-notification": "ó°‚ ",
      "dnd-none": "ó°ª“",
